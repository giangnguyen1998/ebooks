<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="113dp"
        android:layout_height="224dp"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:elevation="1dp"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="129dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="7.8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/book_image" />

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/bookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.4dp"
                android:text="Hugo Huesca
Dungeon Lord"
                android:textColor="@color/black"
                android:textSize="13.3sp" />

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.4dp"
                android:layout_marginTop="2dp"
                android:text="O. Henry "
                android:textColor="#69000000"

                android:textSize="12.7sp" />

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.4dp"
                android:text="USD22.9"
                android:textColor="@color/toolbarColor"
                android:textSize="12.7sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>