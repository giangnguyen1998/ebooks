<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="23dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/book_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="5sp"
            android:maxLines="5"
            android:text="..."
            android:textColor="#454545"
            android:textSize="13sp" />

        <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Medium
            android:id="@+id/book_read_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:text="SHOW MORE"
            android:textColor="#fe571f"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="25.5dp"
            android:background="#707070" />

        <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="18.2dp"
            android:text="Bibliographic information"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp">

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                android:id="@+id/book_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#454545"
                android:textSize="13sp" />

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                android:id="@+id/book_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_1"
                android:text="Author"
                android:textColor="#454545"
                android:textSize="13sp" />

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                android:id="@+id/book_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_2"
                android:text="Publisher"
                android:textColor="#454545"
                android:textSize="13sp" />

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                android:id="@+id/book_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_3"
                android:text="Subjects"
                android:textColor="#454545"
                android:textSize="13sp" />

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                android:id="@+id/book_name"
                android:layout_toRightOf="@id/book_1"
                android:layout_marginLeft="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/book_1"
                android:layout_alignBottom="@id/book_1"
                android:layout_marginRight="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="#ac454545"
                android:textSize="13sp" />

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                android:id="@+id/book_author"
                android:layout_toRightOf="@id/book_2"
                android:layout_below="@id/book_name"
                android:layout_marginLeft="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/book_2"
                android:layout_alignBottom="@id/book_2"
                android:layout_marginRight="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="#ac454545"
                android:textSize="13sp" />

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                android:id="@+id/book_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:layout_toRightOf="@id/book_3"
                android:layout_below="@id/book_author"
                android:layout_marginLeft="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/book_3"
                android:layout_alignBottom="@id/book_3"
                android:layout_marginRight="20dp"
                android:textColor="#ac454545"
                android:textSize="13sp" />

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                android:id="@+id/book_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:layout_toRightOf="@id/book_5"
                android:layout_below="@id/book_publisher"
                android:layout_marginLeft="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/book_5"
                android:layout_alignBottom="@id/book_5"
                android:layout_marginRight="20dp"
                android:textColor="#ac454545"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="17.8dp"
            android:layout_marginBottom="50dp"
            android:background="#707070" />

    </LinearLayout>
</LinearLayout>