<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="236dp">

        <ImageView
            android:transitionName="categoryImageTransition"
            android:id="@+id/iconImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/book_image" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_alignParentBottom="true"
            android:background="#8C000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/bookCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:text="Adventure"
                    android:textColor="@color/white"
                    android:textSize="15.7dp" />

                <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/totalBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="4"
                    android:text="320,322 Books"
                    android:textColor="@color/white"
                    android:textSize="12.7dp" />
            </LinearLayout>
        </FrameLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>