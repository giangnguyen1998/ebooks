<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.CocoBookDetailActivity">

    <include layout="@layout/toolbar2" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/toolbarColor"
                android:elevation="5dp"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="17.8dp"
                android:transitionName="bookImageTransition">

                <android.support.v7.widget.CardView
                    android:layout_width="98dp"
                    android:layout_height="145dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    app:cardCornerRadius="1.5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dutch" />
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="28dp"
                    android:orientation="vertical">

                    <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The World Of Abstract
Art (Dutch)"
                        android:textColor="@color/white"
                        android:textSize="15.7dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:orientation="horizontal">

                        <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="Author :"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jenri Gomes"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6.7dp"
                        android:orientation="horizontal">

                        <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="Publisher :"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Create Media"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6.7dp"
                        android:orientation="horizontal">

                        <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="Pages :"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 570"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/shadow_down"></LinearLayout>

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="23dp"
                android:text="About"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Medium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="5sp"
                android:text="Young Turks features thirteen of the most inspiring
and brilliant tech entrepreneurs of our age. It
includes interviews with first-generation
entrepreneurs like Naveen Tewari of InMobi; Sachin
Bansal and Binny Bansal of Flipkart; Kunal Bahl and
Rohit Bansal of Snapdeal; V.S.S. Mani of Just Dial;
and Murugavel Janakiraman of BharatMatrimony."
                android:textColor="#454545"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="25.5dp"
                android:background="#707070" />

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="18.2dp"
                android:text="Bibliographic information"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textColor="#454545"
                        android:textSize="13sp" />

                    <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Author"
                        android:textColor="#454545"
                        android:textSize="13sp" />

                    <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Publisher"
                        android:textColor="#454545"
                        android:textSize="13sp" />

                    <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ISBN"
                        android:textColor="#454545"
                        android:textSize="13sp" />

                    <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Length"
                        android:textColor="#454545"
                        android:textSize="13sp" />

                    <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subjects"
                        android:textColor="#454545"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical">

                    <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The World of Abstract"
                        android:textColor="#ac454545"
                        android:textSize="13sp" />

                    <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shereen Bhan, Syna Dehnugara"
                        android:textColor="#ac454545"
                        android:textSize="13sp" />

                    <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Random House India, 2014"
                        android:textColor="#ac454545"
                        android:textSize="13sp" />

                    <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8184006691, 9788184006698"
                        android:textColor="#ac454545"
                        android:textSize="13sp" />

                    <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="297 pages"
                        android:textColor="#ac454545"
                        android:textSize="13sp" />

                    <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Literary Collections â€º Essays"
                        android:textColor="#ac454545"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="17.8dp"
                android:layout_marginBottom="50dp"
                android:background="#707070" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>