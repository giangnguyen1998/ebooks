<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="100.8dp"
    android:background="@color/toolbarColor"
    android:elevation="5dp"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStart="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginLeft="13.5dp"
                android:visibility="gone"
                android:src="@drawable/ic_left_arrow" />

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.5dp"
                android:lineSpacingExtra="2.7sp"
                android:text="RIVER PINK"
                android:textColor="@color/white"
                android:textSize="16.7sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.5dp"
            android:layout_marginTop="15.7dp"
            android:layout_marginRight="13.5dp"
            android:background="@drawable/rect_searchbar"
            android:elevation="2dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:src="@drawable/search" />

            <edu.nuce.giang.ebooks.customfonts.EditText_Roboto_Medium
                android:id="@+id/edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/transperentColor"
                android:editable="false"
                android:focusable="false"
                android:hint="Search Books, Author"
                android:paddingLeft="6.7dp"
                android:textColorHint="@color/hintColor"
                android:textSize="13sp"
                android:windowSoftInputMode="stateHidden" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="10dp"
                android:paddingBottom="12dp"
                android:src="@drawable/camera" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="12dp"
                android:paddingRight="18.1dp"
                android:paddingBottom="12dp"
                android:src="@drawable/mike" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.Toolbar>