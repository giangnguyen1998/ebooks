<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CocoBookGerneActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Medium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="63.7dp"
                android:gravity="center_horizontal"
                android:text="SELECT YOUR THREE"
                android:textColor="@color/black"
                android:textSize="16.7sp" />

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Medium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.7dp"
                android:gravity="center_horizontal"
                android:text="FAVOURITE CATEGORIES"
                android:textColor="@color/black"
                android:textSize="16.7sp" />

            <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Medium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="You can change it later"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.5dp"
                android:layout_marginTop="44dp"
                android:layout_marginRight="13.5dp"
                android:background="@drawable/rect_searchbar1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/search" />

                <edu.nuce.giang.ebooks.customfonts.EditText_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/transperentColor"
                    android:hint="Search your favourite genre"
                    android:textColorHint="@color/hintColor"
                    android:textSize="13sp" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="60dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:paddingRight="8dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <edu.nuce.giang.ebooks.customfonts.MyTextView_Roboto_Medium
        android:layout_width="match_parent"
        android:layout_height="52.3dp"
        android:layout_alignParentBottom="true"
        android:background="@color/toolbarColor"
        android:gravity="right"
        android:paddingTop="19dp"
        android:paddingRight="25dp"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>